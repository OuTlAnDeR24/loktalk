<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loctalk"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8"
        android:targetSdkVersion="18" />
     <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name="com.loctalk.startScreen" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> 
            
        </activity>
        <activity android:name="com.loctalk.MessageActivity" />
        <activity android:name="com.loctalk.BaseActivity" />
        <activity android:name = "com.loctalk.peerActivity" />
        <activity android:name="com.loctalk.pmchat" />
         <service android:name="receiverser" android:process=":remote"></service>
    </application>

</manifest>